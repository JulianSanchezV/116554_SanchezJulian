def contador_digitos(texto):
    cont = 0
    
    for i in frase:
        if(i.isalpha()):
            cont+=1
    print("El número de digitos en es: ",cont)
    
contador_digitos(frase)

def contador_espacios(texto):
    cont = 0    
    for a in frase:
        if (a.isspace()) == True: 
            cont+=1
    print("El número de espacios que hay es: ",cont,)
        
contador_espacios(frase)

