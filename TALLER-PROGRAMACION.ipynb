#%% Ejercicio 3

def multiplo(valor, multiplo):

    resto = valor % multiplo

    if resto == 0:
        return True
    else:
        return False

multiplos_3=[]
multiplos_4=[]

for i in range(1,101):

    if multiplo(i,3):
        multiplos_3.append(i)
        
    elif multiplo(i,4):
        multiplos_4.append(i)

print ("Los multiplos de 3 son:",multiplos_3,)
print()
print ("Los multiplos de 4 son:",multiplos_4,)




